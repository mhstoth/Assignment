{{#if groupedPlacemarks}}
<div class="box">
  <div class="level">
    <div class="level-left">
      <h2 class="title">Your Placemarks</h2>
    </div>
    <div class="level-right">
      <form action="/dashboard/deletealluserplacemarks" method="POST">
        <button type="submit" class="icon is-small" style="border: none; background: none; cursor: pointer"
          title="Delete All">
          <i class="fas fa-trash"></i>
        </button>
      </form>
    </div>
  </div>
  {{#each groupedPlacemarks}}
  <div class="box" style="box-shadow: none; border: 1px solid #dbdbdb">
    <div class="field">
      <h3 class="title is-4">{{category}}</h3>
    </div>
    {{#each items}}
    <div class="box box-link-hover-shadow">
      {{#if img}}
      <figure class="image mb-4">
        <img src="{{img}}" alt="{{title}}"
          style="width: 100%; max-height: 200px; object-fit: cover; border-radius: 6px;">
      </figure>
      {{/if}}
      <div class="level">
        <div class="level-left">
          <h3 class="title is-5">{{title}}</h3>
        </div>
        <div class="level-right">
          <form action="/dashboard/deleteplacemark/{{_id}}" method="POST">
            <button type="submit" class="icon is-small" style="border: none; background: none; cursor: pointer"
              title="Delete All">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </div>
      </div>
      <div class="field">
        <label class="label">Description</label>
        <p class="control">{{description}}</p>
      </div>
      <div class="field is-horizontal">
        <div class="field-body">
          <div class="field">
            <label class="label">Latitude</label>
            <p class="control">{{latitude}}</p>
          </div>
          <div class="field">
            <label class="label">Longitude</label>
            <p class="control">{{longitude}}</p>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>
{{/if}}